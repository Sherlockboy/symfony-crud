{% if articles %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Article Title</th>
            <th>Article Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{article.title}}</td>
            <td>{{article.body}}</td>
            <td class="d-flex justify-content-end">
                <a href="/articles/{{article.id}}" class="btn btn-primary">Show</a>
                <a href="/articles/update/{{article.id}}" class="btn btn-secondary ms-1">Update</a>
                <a href="#" class="btn btn-danger ms-1 delete-article" data-id="{{article.id}}">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p>No Articles!</p>
{% endif %}